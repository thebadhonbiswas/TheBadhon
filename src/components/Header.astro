---
import Button from '../components/Button.astro';
const {
  profilep,
  title,
  intro,
  button1,
  button2
} = Astro.props;
---
<header id="hero">
  <div class="container">
    <div class="image-box">
      <img
        src="https://ik.imagekit.io/badhon/tr:w-364,h-364,q-90,f-auto/logo.png"
        srcset="
          https://ik.imagekit.io/badhon/tr:w-364,h-364,q-90,f-auto/logo.png 364w,
          https://ik.imagekit.io/badhon/tr:w-512,h-512,q-90,f-auto/logo.png 512w,
          https://ik.imagekit.io/badhon/tr:w-768,h-768,q-90,f-auto/logo.png 768w
        "
        sizes="(max-width: 480px) 364px, (max-width: 768px) 512px, 768px"
        alt="Badhon Biswas"
        loading="eager"
        decoding="async"
        fetchpriority="high"
      />
    </div>
    <div class="text-box">
      <h1>Hi, I'm <span class="highlight">Badhon Biswas</span></h1>
      <div class="badge">
        <span>Specialist</span>
      </div>
      <h2><strong>Web Developer</strong> & <strong>UI/UX Designer</strong></h2>
      <p>Bringing ideas to life through design, code, and creativity.</p>
      <div class="btn-container">
        <Button btn="Hire Me" btnlink="mailto:badhonraj1145@gmail.com" />
        <Button btn="Projects" btnlink="projects" />
      </div>
    </div>
  </div>
</header>

<style>
:root {
  --primary: #ff6a00;
  --secondary: #ffffff;
  --accent: #ffe0c2;
  --muted: #f5f5f5;
  --border: #e0e0e0;
  --highlight: #ffb266;
  --info: #fef3e2;

  --text-main: #333333;
  --text-light: #666666;
}

* {
  margin: 0;
  padding: 0;
  box-sizing: border-box;
  line-height: 1.4;
}

.container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: stretch;
  gap: 2rem;
  padding: 0 1.5rem;
  margin-top: 60px;
  height: calc(100vh - 60px);
}

.image-box {
  display: flex;
  justify-content: center;
}

.image-box img {
  width: 100%;
  max-width: 380px;
  border-radius: 20px;
  background: linear-gradient(to bottom, #010405, #545454);
  object-fit: contain;
}

.text-box {
  max-width: 700px;
  text-align: left;
  margin: 0 auto;
}

.text-box h1 {
  font-size: 2.7rem;
  color: var(--text-main);
  font-weight: 700;
  padding: 0 0 10px 0;
}

.text-box h1 span {
  display: block;
  color: var(--primary);
}

.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  background-color: var(--accent);
  color: var(--primary);
  font-size: 0.75rem;
  font-weight: 600;
  padding: 0.2rem 0.6rem;
  border-radius: 9999px;
  text-transform: uppercase;
  letter-spacing: 0.05em;
  width: fit-content;
  margin: 0.5rem 0 0 0;
  box-shadow: 0 0 0 1px var(--primary);
}

.badge span {
  white-space: nowrap;
}

.text-box h2 {
  margin: 1rem 0 0.5rem;
  color: var(--text-main);
  font-size: 1.1rem;
}

.text-box p {
  color: var(--text-light);
  font-size: 1rem;
  font-weight: 500;
  margin-bottom: 1.5rem;
}

.btn-container {
  display: flex;
  justify-content: flex-start;
  gap: 1.5rem;
  flex-wrap: wrap;
}

/* ✅ Tablet Scaling (min-width: 640px to max-width: 1023px) */
@media (min-width: 640px) and (max-width: 1023px) {
  .text-box h1 {
    font-size: 2.6rem;
  }

  .text-box h2 {
    font-size: 1.3rem;
  }

  .text-box p {
    font-size: 1.1rem;
  }

  .image-box img {
    max-width: 380px;
  }
}

/* ✅ Desktop Layout */
@media (min-width: 1024px) {
  .container {
    flex-direction: row;
    align-items: center;
    justify-content: space-between;
    padding: 0 5rem;
  }

  .image-box {
    flex: 1;
  }

  .image-box img {
    max-width: 400px;
    height: auto;
  }

  .text-box {
    flex: 1;
    padding-right: 2rem;
    margin: 0;
  }

  .text-box h1 {
    font-size: 3rem;
  }

  .text-box h2 {
    font-size: 1.5rem;
  }

  .text-box p {
    font-size: 1.1rem;
  }

  .badge {
    margin-left: 0;
  }

  .btn-container {
    justify-content: flex-start;
  }
}
</style>