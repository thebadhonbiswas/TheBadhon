---
import Button from '../components/Button.astro';
const {
  profilep,
  title,
  intro,
  button1,
  button2
} = Astro.props;
---
<header id="hero">
  <div class="container">
<img
  src="https://ik.imagekit.io/badhon/tr:w-364,h-364,q-90,f-auto/logo.png"
  srcset="
    https://ik.imagekit.io/badhon/tr:w-364,h-364,q-90,f-auto/logo.png 364w,
    https://ik.imagekit.io/badhon/tr:w-512,h-512,q-90,f-auto/logo.png 512w,
    https://ik.imagekit.io/badhon/tr:w-768,h-768,q-90,f-auto/logo.png 768w
  "
  sizes="(max-width: 480px) 364px, (max-width: 768px) 512px, 768px"
  width="364"
  height="364"
  alt="Badhon Biswas"
  loading="eager"
  decoding="async"
  fetchpriority="high"
/>
    <h1>
      Hi, I'm <span class="highlight">Badhon Biswas</span>
    </h1>
    <div class="badge">
      <p class="badge">
        Specialist
      </p>
    </div>
    <h2>
      <strong>Web Developer</strong> & <strong>UI/UX Designer</strong>
    </h2>
    <p>
      Bringing ideas to life through design, code, and creativity.
    </p>
    <div class="btn-container">
      <Button btn="Hire Me" btnlink="mailto:badhonraj1145@gmail.com" />
      <Button btn="Projects" btnlink="projects" />
    </div>
  </div>
</header>

<style>
:root {
  --primary: #ff6a00;
  --secondary: #ffffff;
  --accent: #ffe0c2;
  --muted: #f5f5f5;
  --border: #e0e0e0;
  --highlight: #ffb266;
  --info: #fef3e2;

  /* Optional text colors */
  --text-main: #333333;
  --text-light: #666666;
}
  * {
    margin: 0;
    padding: 0;
    line-height: 1.3;
  }
  .container {
    height: calc(100vh - 100px);
    margin-top: 60px;
    padding: 20px 24px;
    display: flex;
    flex-direction: column;
    flex-wrap: warp;
    gap: 1rem;

  }
  img {
    margin-top: 2rem;
    width: 100%;
    border-radius: 20px;
    background: linear-gradient(to bottom, #010405, #545454);
  }
  .container h1 {
    color: var(--text-main);
    font-size: 2.5rem;
  }
  .container h1 span {
    display: block;
  }
  .container .badge {
    display: inline-block;
    padding: 0.2rem 0.3rem 0.1rem 0.3rem;
    font-size: 0.7rem;
    font-weight: 600;
    color: var(--primary);
    background-color: var(--accent);
    border-radius: 9999px;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    width: auto;
    align-self: flex-start;
    /* Prevents stretching in flex container */
  }

  .container h2 {
    color: var(--text-main);
    margin-top: -1rem;
    padding: 10px 0;
    font-size: 1.2rem;
  }

  .container p {
    color: var(--text-light);
    font-size: 16px;
    font-weight: 500;
    margin-top: -1rem;
  }

  .btn-container {
    display: flex;
    gap: 2rem;
  }

</style>